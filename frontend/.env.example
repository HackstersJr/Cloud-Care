# CloudCare Frontend Environment Variables
# Copy this file to .env for local development

# Backend API Configuration
# Default is relative /api/v1, which works over LAN via Vite proxy.
# Override only if needed (e.g., production build pointing to a remote API).
# Example:
# VITE_API_BASE_URL=https://your-api.example.com/api/v1

# Vite dev proxy target for backend (used only by dev server)
# Defaults to http://localhost:3000 if unset
# VITE_BACKEND_URL=http://192.168.1.50:3000

# ABHA Integration
VITE_ABHA_BASE_URL=https://healthidsbx.abdm.gov.in

# Development Settings
VITE_NODE_ENV=development

# Feature Flags
VITE_ENABLE_BLOCKCHAIN=true
VITE_ENABLE_ABHA=true
VITE_ENABLE_WEARABLES=true

# Wearables Service Configuration
# For local development with Docker
VITE_WEARABLES_SERVICE_URL=http://localhost:6644
# For production deployment
# VITE_WEARABLES_SERVICE_URL=https://cloudcare-backend-644000971069.asia-south1.run.app/api/v1/wearables

# Debugging
VITE_DEBUG_API=false
VITE_DEBUG_AUTH=false
