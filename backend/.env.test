# Test environment variables
NODE_ENV=test
PORT=3001

# Test Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudcare_test_db
DB_USER=postgres
DB_PASSWORD=test_password
DB_SSL=false
DATABASE_URL=postgresql://postgres:test_password@localhost:5432/cloudcare_test_db

# Test JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only-32-chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=test-refresh-token-secret-for-testing
REFRESH_TOKEN_EXPIRES_IN=7d

# Test Security
ENCRYPTION_KEY=test-encryption-key-for-testing-32
ENCRYPTION_ALGORITHM=aes-256-gcm
BCRYPT_SALT_ROUNDS=4

# Test ABHA (Mock)
ABHA_BASE_URL=http://localhost:3002
ABHA_CLIENT_ID=test_client_id
ABHA_CLIENT_SECRET=test_client_secret
ABHA_SCOPE=test-scope

# Test Blockchain (Mock)
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_RPC_URL=http://localhost:8545
PRIVATE_KEY=test_private_key
CONTRACT_ADDRESS=0x123456789
MOCK_BLOCKCHAIN=true

# Test Logging
LOG_LEVEL=error
AUDIT_LOG_ENABLED=false
PHI_ENCRYPTION_ENABLED=false

# Test Rate Limiting (Relaxed)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
