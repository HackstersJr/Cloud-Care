# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudcare_db
DB_USER=postgres
DB_PASSWORD=cloudcare_dev_password
DB_SSL=false
DATABASE_URL=postgresql://postgres:cloudcare_dev_password@localhost:5432/cloudcare_db

# JWT and Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_chars
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# ABHA (Ayushman Bharat Health Account) Integration
ABHA_BASE_URL=https://healthidsbx.abdm.gov.in
ABHA_CLIENT_ID=your_abha_client_id
ABHA_CLIENT_SECRET=your_abha_client_secret
ABHA_SCOPE=abha-enrol

# Blockchain Configuration - Polygon Amoy Testnet
BLOCKCHAIN_NETWORK=polygon-amoy
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology/
CHAIN_ID=80002
PRIVATE_KEY=f0d0553f64ef416f3939bbd180d169a4743fb42afe32bc3f1b17000bfa9211c4
CONTRACT_ADDRESS=your_deployed_contract_address_optional
GAS_LIMIT=500000
GAS_PRICE=20000000000
WALLET_ADDRESS=0xBD5Eb6FC250DD1CcaAdA606Da77077078eFD4a6d

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
GOOGLE_CLOUD_STORAGE_BUCKET=cloudcare-medical-records

# Security and Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,dicom

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/cloudcare.log

# HIPAA Compliance
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=logs/audit.log
DATA_RETENTION_DAYS=2555
PHI_ENCRYPTION_ENABLED=true

# Development/Testing
MOCK_BLOCKCHAIN=false
MOCK_ABHA=true
TEST_DATABASE_URL=postgresql://postgres:test_password@localhost:5432/cloudcare_test_db

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5174
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true

# API Documentation
API_DOCS_ENABLED=true
SWAGGER_HOST=localhost:3000
